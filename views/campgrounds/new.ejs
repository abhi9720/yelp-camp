<% layout('layout/boilerplate') %>
  <!-- so we are injecting this content into our boiler plate    -->



  <form action="/campgrounds" method="POST" novalidate class="needs-validation sh" enctype="multipart/form-data" c>

    <div class="container" style="margin-top: 95px; margin-bottom: 20px;">
      <div class="row bg-white shadow-lg " style="border-radius: 20px;">
        <span class="text-center display-6 mb-5 mt-4" id="">New Campground</span>

        <div class="row">
          <div class="col-md-6 bg-white  mx-auto" id="n">





            <div class="mb-3">
              <label class="form-label" for="title">Title</label>
              <input class="form-control input2" type="text" id="title" name="campground[title]" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Enter Campground Name
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="Location">Location</label>
              <input class="form-control input2" type="text" id="location" name="campground[location]" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Enter Location
              </div>

            </div>



            <div class="mb-3">
              <label class="form-label" for="price">Campground Price</label>
              <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="number" class="form-control input2" id="price" placeholder="0" min="0" aria-label="Price"
                  aria-describedby="price-label" name="campground[price]" required>
                <div class="valid-feedback">
                  Looks good!
                </div>

                <div class="invalid-feedback">
                  Enter Price
                </div>

              </div>
            </div>


            <div class="mb-4">
              <label class="form-label" for="description">Description </label>
              <textarea class="form-control input" type="text" id="newcamp-description" minlength="15"
                name="campground[description]" required></textarea>

              <div class="valid-feedback">
                Looks good!
              </div>

              <div class="invalid-feedback">
                Description should be greater than 20 chracter
              </div>

            </div>







          </div>



          <div class="col-md-5  mx-auto">
            <div class="input-group mt-5">
              <input type="file" class="form-control input " name="image" id="upload-Images" multiple>
            </div>
          </div>

        </div>

        <div class="new-form-btn">
          <a id="add-camp-btn2" type="button" href="/campgrounds">Back</a>
          <button id="add-camp-btn1"> Add Campground </button>


        </div>

      </div>


    </div>




    </div>

  </form>

  <!-- // file upload section -->