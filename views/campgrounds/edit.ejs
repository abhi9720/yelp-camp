<% layout('layout/boilerplate') %>
    <!-- so we are injecting this content into our boiler plate    -->


    <div class="container mt-5">
        <!-- this take 3 col and we offset it by 3 it comes to middle  -->

        <form action="/campgrounds/<%=campground._id%>?_method=PUT" novalidate class="needs-validation" method="POST"
            enctype="multipart/form-data">

            <div class="row bg-white mb-5 shadow-sm">

                <span class="logo">
                    <p class=" mt-2"> Yelp Camp</p>
                </span>
                <h4 class="text-center mt-4">Update Campground</h4>

                <div class="col-md-6  ms-12">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" minlength="2" name="campground[title]"
                            value="<%=campground.title %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter Campground Name
                        </div>
                    </div>


                    <div class="mb-3">
                        <label class="form-label" for="Location">Location</label>
                        <input class="form-control" type="text" id="location" minlength="2" name="campground[location]"
                            value="<%=campground.location%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="image">Add Images</label>
                        <input class="form-control" type="file" id="images" name="image" multiple>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="number" class="form-control" id="price" placeholder="0" min="0"
                                aria-label="Price" aria-describedby="price-label" name="campground[price]"
                                value="<%=campground.price%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter price greater then 0
                            </div>
                        </div>
                    </div>

                    <div class=" mb-3">
                        <label class="form-label" for="description">Description </label>
                        <textarea class="form-control" type="text" id="description" minlength="10"
                            name="campground[description]" rows="5" required><%=campground.description%></textarea>

                        <div class="valid-feedback">
                            Looks good!
                        </div>

                        <div class="invalid-feedback">
                            Character should be greater than 10
                        </div>


                    </div>

                </div>


                <div class="col-md-6 col-sm-12 mx-auto mb-2">


                    <% campground.images.forEach(function(img, i) { %>
                        <div class="d-inline-block edit-image">
                            <img src="<%=img.url%>" alt="" class="camp-image-2 d-inline">

                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            <label for="image-<%=i%>">Delete?</label>
                        </div>
                        <% })%>

                </div>



            </div>

         <div class="d-inline-block mb-5">
            <button class="btn btn-secondary mx-auto">Update Campground</button>
            <a class="" href="/campgrounds/<%= campground._id%>">Back to Campground</a>
         </div>
            
            


        </form>

    </div>




    <!-- --------------------------------------------------------------------------------------------------------------------------------------------- -->

    <!-- so we are injecting this content into our boiler plate    -->